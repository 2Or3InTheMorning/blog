// 导航样式
.dropdown-wrapper .nav-dropdown {
    padding: 0 !important;
   
    .dropdown-item {
        padding-bottom: 0.45rem !important;

        h4 {
            margin: .45rem 0 !important;
            padding: 0.45rem 1.5rem 0 0.8rem !important;
            color: #999;

            &:first-child {
                margin-top: 0 !important;
            }
        }
    }
}

// Badge标签
.badge.normal {
    background: #3276F2 !important;
}

.theme-default-content:not(.custom) > h1:first-child {
    margin-top: 2.4rem;
    margin-bottom: 2.6rem;
    padding-top: 0;
}
