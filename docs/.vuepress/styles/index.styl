// 首页进入按钮
.action-button {
    width: 300px;
    height: 40px;
    line-height 14px;
}

// 首页背景图
.hero img {
    // max-width: none !important;
    // width: 800px;
    max-height: 400px !important;
    margin-top: 0 !important;
}

// 侧边栏
.sidebar {
    width: 19rem !important;

    a.sidebar-link {
        padding-left: 2rem;
        font-weight: bold;
        color: #999;
        transition: all .2s ease;

        &.active {
            width: 15rem;
            padding: .35rem 1rem .35rem .75rem;
            margin: 0 1rem 0 1.5rem;
            border-radius: .25rem;
            // color: white; // 非暗色主题可打开
            color: $textDarkColor; // 暗色主题
            background: $accentColor;
            transition: all .2s ease;
        }
    }
}
.sidebar-sub-headers {
    a.sidebar-link {
        padding-left: 2.4rem !important;
        // color: #333; // 非暗色主题可打开
        color: $textDarkColor; // 暗色主题
        font-weight: normal;
        transition: all .2s ease;

        &.active {
            padding: .25rem 1rem .25rem 2rem;
            margin: auto;
            width: auto;
            color: $accentColor;
            background transparent;
            transition: all .2s ease;
        }
    }
}

