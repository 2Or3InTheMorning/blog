@import './theme.styl'

// 首页进入按钮
.action-button {
    width: 20rem;
    height: 3rem;
    line-height: 1.5rem;
}

// Badge标签
.badge.normal {
    background: #3276F2 !important;
}

.theme-default-content:not(.custom) > h1:first-child {
    margin-top: 2.4rem;
    margin-bottom: 2.6rem;
    padding-top: 0;
}


.action-button {
    position: relative;
    //隐藏溢出的径向渐变背景
    overflow: hidden;
}

.action-button:before {
    content: "";
    display: block;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    pointer-events: none;
    //设置径向渐变
    background-image: radial-gradient(circle, #666 10%, transparent 10.01%);
    background-repeat: no-repeat;
    background-position: 50%;
    opacity: 0;
    transition: transform .2s, opacity .3s;
    transform: scale(0, 0);
}

.action-button:active:before {
    opacity: .2;
    transform: scale(10, 10);
    //设置初始状态
    transition: 0;
}